@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="mb-1">
                        <i class="fas fa-user-circle text-primary"></i>
                        Bem-vindo, @ViewBag.NmFuncionario!
                    </h4>
                    @* <p class="text-muted mb-0">
                        <i class="fas fa-building"></i> @ViewBag.NmEmpresa
                        <span class="ms-3">@Html.Raw(ViewBag.TipoUsuario.BadgeTipoUsuario())</span>
                    </p> *@
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.TipoUsuario == "C")
    {
        <!-- Dashboard para Cliente -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("Novo", "Chamado")" class="text-decoration-none">
                    <div class="card shadow-sm h-100 border-primary">
                        <div class="card-body text-center">
                            <i class="fas fa-plus-circle fa-3x text-primary mb-3"></i>
                            <h5>Abrir Novo Chamado</h5>
                            <p class="text-muted">Registre uma nova solicitação</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("Index", "Chamado")" class="text-decoration-none">
                    <div class="card shadow-sm h-100 border-info">
                        <div class="card-body text-center">
                            <i class="fas fa-list fa-3x text-info mb-3"></i>
                            <h5>Meus Chamados</h5>
                            <p class="text-muted">Visualize seus chamados</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Dashboard para Atendente/Admin -->
        <div class="row">
            <div class="col-md-4 mb-3">
                <a href="@Url.Action("Index", "Chamado", new { ApenasAbertos = true })" class="text-decoration-none">
                    <div class="card shadow-sm h-100 border-warning">
                        <div class="card-body text-center">
                            <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                            <h5>Chamados Abertos</h5>
                            <p class="text-muted">Visualize todos em aberto</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="@Url.Action("Index", "Chamado", new { ApenasMeusChamados = true })" class="text-decoration-none">
                    <div class="card shadow-sm h-100 border-primary">
                        <div class="card-body text-center">
                            <i class="fas fa-user-check fa-3x text-primary mb-3"></i>
                            <h5>Meus Atendimentos</h5>
                            <p class="text-muted">Chamados atribuídos a mim</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a href="@Url.Action("Index", "Chamado")" class="text-decoration-none">
                    <div class="card shadow-sm h-100 border-info">
                        <div class="card-body text-center">
                            <i class="fas fa-list fa-3x text-info mb-3"></i>
                            <h5>Todos os Chamados</h5>
                            <p class="text-muted">Visualize todos</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-info-circle"></i> Informações do Sistema</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Sistema:</strong> TaskFlow v1.0</p>
                    <p class="mb-2"><strong>Funcionalidades:</strong></p>
                    <ul class="mb-0">
                        <li>Abertura e acompanhamento de chamados</li>
                        <li>Sistema de comentários e anexos</li>
                        <li>Histórico completo de ações</li>
                        <li>Avaliação de atendimento</li>
                        <li>Transferência de chamados entre atendentes</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
