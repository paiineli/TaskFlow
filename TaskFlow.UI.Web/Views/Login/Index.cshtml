@model UsuarioViewMOD
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                        <h2>TaskFlow</h2>
                        <p class="text-muted">Sistema de Gerenciamento de Tickets</p>
                    </div>

                    <form method="post" asp-action="EfetuarLogin" asp-controller="Login">
                        <div class="mb-3">
                            <label asp-for="Login" class="form-label">Usuário</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-user"></i>
                                </span>
                                <input asp-for="Login" class="form-control" placeholder="Informe seu usuário" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-key"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Preencha sua senha" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa fa-lock me-2"></i> Entrar
                        </button>

                        <div class="text-center mt-4">
                            <small class="text-muted">&copy; TaskFlow @DateTime.Now.Year</small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
