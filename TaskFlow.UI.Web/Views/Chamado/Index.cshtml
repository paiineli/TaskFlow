@using TaskFlow.UI.Web.Helpers
@using X.PagedList.Mvc.Core
@model ChamadoViewMOD
@{
    ViewData["Title"] = "Chamados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-1">
                                <i class="fas fa-ticket-alt text-primary"></i>
                                Gerenciamento de Chamados
                            </h4>
                            <p class="text-muted mb-0">
                                Total: <strong>@Model.QtdTotalDeRegistros</strong> chamado(s)
                            </p>
                        </div>
                        @if (ViewBag.TipoUsuario == "C" || ViewBag.TipoUsuario == "A")
                        {
                            <a href="@Url.Action("Novo", "Chamado")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Novo Chamado
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros de Busca -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-filter"></i> Filtros de Busca
                    </h6>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Número do Chamado</label>
                                <input type="text" name="NrChamado" class="form-control" placeholder="CHM-2025-00001" value="@ViewBag.Busca?.NrChamado" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Título</label>
                                <input type="text" name="TxTitulo" class="form-control" placeholder="Buscar por título..." value="@ViewBag.Busca?.TxTitulo" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Categoria</label>
                                <select name="CdCategoria" class="form-select">
                                    <option value="">Todas</option>
                                    @foreach (var cat in Model.Categorias)
                                    {
                                        <option value="@cat.CdCategoria" selected="@(ViewBag.Busca?.CdCategoria == cat.CdCategoria)">@cat.NmCategoria</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Status</label>
                                <select name="CdStatus" class="form-select">
                                    <option value="">Todos</option>
                                    @foreach (var st in Model.Status)
                                    {
                                        <option value="@st.CdStatus" selected="@(ViewBag.Busca?.CdStatus == st.CdStatus)">@st.TxStatus</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-end">
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-undo"></i> Limpar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Pesquisar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Chamados -->
    <div class="row">
        <div class="col-12">
            @if (Model.ListaChamadosPaginada != null && Model.ListaChamadosPaginada.Any())
            {
                @foreach (var chamado in Model.ListaChamadosPaginada)
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-9">
                                    <div class="d-flex align-items-start mb-2">
                                        <div class="me-3">
                                            @Html.Raw(chamado.CdPrioridade.IconePrioridade())
                                        </div>
                                        <div class="flex-grow-1">
                                            <h5 class="mb-1">
                                                <a href="@Url.Action("Detalhes", "Chamado", new { id = chamado.CdChamado })" class="text-decoration-none">
                                                    @chamado.NrChamado - @chamado.TxTitulo
                                                </a>
                                            </h5>
                                            <p class="text-muted mb-2">@chamado.TxDescricao</p>
                                            <div>
                                                <span class="badge bg-light text-dark border me-2">
                                                    <i class="fas fa-folder"></i> @chamado.NmCategoria
                                                </span>
                                                @Html.Raw(chamado.CdStatus.BadgeStatusChamado())
                                                @Html.Raw(chamado.CdPrioridade.BadgePrioridade())
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-md-6">
                                            <small class="text-muted">
                                                <i class="fas fa-user"></i> <strong>Solicitante:</strong> @chamado.NmSolicitante
                                            </small>
                                        </div>
                                        <div class="col-md-6">
                                            <small class="text-muted">
                                                <i class="fas fa-user-tie"></i> <strong>Responsável:</strong> @chamado.NmResponsavel.MostrarOuNaoInformado()
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 text-end">
                                    <p class="mb-1">
                                        <small class="text-muted">
                                            <i class="fas fa-clock"></i> @chamado.DtAbertura.TempoDecorrido()
                                        </small>
                                    </p>
                                    <p class="mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-comments"></i> @chamado.QtdComentarios
                                            <i class="fas fa-paperclip ms-2"></i> @chamado.QtdAnexos
                                        </small>
                                    </p>
                                    <a href="@Url.Action("Detalhes", "Chamado", new { id = chamado.CdChamado })" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Ver Detalhes
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Paginação -->
                <div class="card">
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12 text-center">
                                @Html.PagedListPager(Model.ListaChamadosPaginada, pagina => Url.Action("Index",
                                new
                                {
                                    pagina,
                                    NrChamado = ViewBag.Busca?.NrChamado,
                                    TxTitulo = ViewBag.Busca?.TxTitulo,
                                    CdCategoria = ViewBag.Busca?.CdCategoria,
                                    CdStatus = ViewBag.Busca?.CdStatus
                                }),
                                new PagedListRenderOptions
                                {
                                    LiElementClasses = new string[] { "page-item" },
                                    PageClasses = new string[] { "page-link" },
                                    ContainerDivClasses = new[] { "pagination-container" },
                                    UlElementClasses = new[] { "pagination" }
                                })
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i>
                    Nenhum chamado encontrado.
                </div>
            }
        </div>
    </div>
</div>
